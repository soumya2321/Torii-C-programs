#include <stdio.h>
int main() {
    int N;
    scanf("%d", &N);

    int arr[n];
    for(int i = 0; i < N; i++) {
        scanf("%d", &arr[i]);
    }
    int count = 0;
    for(int i = 1; i < N - 1; i++) {
        int left = arr[i - 1];
        int right = arr[i + 1];
        if ( (left % 2 == 0 && right % 2 != 0) ||
             (left % 2 != 0 && right % 2 == 0) ) {
            count++;
        }
    }
    printf("%d", count);
    return 0;
}
